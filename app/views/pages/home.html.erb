<div class="homepage">
<div class="container">
    <div class=" row col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-2">
      <h1 id="logo">Palate</h1>
    </div>
    <div class="row col-xs-8 col-xs-offset-2 col-md-6 col-md-offset-3">
        <%= form_tag '/login' do  %>
        <!-- <h2 class="form-signin-heading">Sign in</h2> -->
        <%= label_tag(:email, "Email", :autofocus => true, :class => "homeLabel") %>
        <%= text_field_tag(:email, nil, :id => "inputEmail", :class => "form-control",  :placeholder => "Email address") %>
        <%= label_tag(:password, "Password", :class => "homeLabel") %>
        <%= password_field_tag(:password, nil, :id => "inputPassword", :class => "form-control",  :placeholder => "Password") %>
        <%= submit_tag('Login', :id => "submit", :class => "btn btn-lg btn-primary btn-block loginBtn" )%>
        <% end %>
    </div>
</div>
</div>
