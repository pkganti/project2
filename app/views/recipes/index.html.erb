<div class='container'>
  <!-- <div class='row col-xs-8 discoveryhead'>
  <h1 class='discovery'>I'm hungry for... </h1>
</div> -->
  <%= form_tag(recipes_path, method: "get") do %>
  <input type="text" name="recipesearch" id="search" placeholder="  eg. Mac n Cheese"></input>
  <%= submit_tag "Search", class: "searchButton" %>

    <!-- <% if (params[:recipesearch]).present? %>
      <div class="search_display">
        <sub>Search results for <%= params[:recipesearch] %></sub>
      </div>
    <% end %> -->
  <% end %>

  <div class= 'row'>
    <% if (@searchrecipes != nil) %>
     <% @recipes.each do |recipe| %>
     <div class='row col-xs-12 col-md-4 results'>
       <div class="recipe-card">
         <div class="card-wrapper">
           <a href="/recipes/<%= recipe.id %>"><img src="<%= recipe.images %>" alt=""></a>
         </div>
         <div id="card-title"><%= recipe.title %> </div>
         <div id="card-level">
           <% if (recipe.level).present? %>
             <% recipe_levels = {0=>'Easy',1=>'Medium',2=>'Complex'} %>
             <li>Level: <%= recipe_levels[recipe.level] %></li>
           <% end %>
         </div>
         <div id="card-rating"><%= recipe.ratings %> </div>
    <!-- <div id="card-cooktime"><%#= recipe.cook_duration+ recipe.prep_duration %> </div> -->
        </div>
      </div>
      <% end %>
      <% @searchrecipes.each_with_index do |x,i| %>
       <div class='col-xs-12 col-md-4 results'>
        <div class="recipe-card">
          <div class="card-wrapper">
            <a href="/recipes/<%= @searchrecipes[i]["recipe_id"] %>"><img src="<%= @searchrecipes[i]["image_url"] %>"></a>
          </div>
          <div id="card-title"><%= @searchrecipes[i]["title"] %> </div>
          <div id="card-level">
            <% if (@searchrecipes[i]["level"]).present? %>
              <% recipe_levels = {0=>'Easy',1=>'Medium',2=>'Complex'} %>
              <li>Level: <%= recipe_levels[@searchrecipes[i]["level"]] %></li>
            <% end %>
          </div>
          <div id="card-rating"><%= @searchrecipes[i]["ratings"] %> </div>
          <!-- <div id="card-cooktime"><%#S= @searchrecipes[i]["cook_duration"]+ @searchrecipes[i]["prep_duration"] %> </div> -->
        </div>
      </div>
     <% end %>
    <% else %>
     <!-- <% @recipes.each do |recipe| %>
       <a href="/recipes/<%= recipe.id %>"><img src="<%= recipe.images %>" alt=""></a>
       <ul>
        <li>Title: <%= recipe.title %></li>
       </ul>
     <% end %> -->
     <div class="rolling-images">
     <% @list_recipes.each_with_index do |x,i| %>
       <%= link_to image_tag(@list_recipes[i]["images"]), "/recipes/#{@list_recipes[i]["id"]}"%>
     <% end %>
     </div>
    <% end %>
  </div>
</div>
